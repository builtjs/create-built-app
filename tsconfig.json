{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "build"
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "apiKeyUtils.d.ts"]
}
